# =============================================================================
# MCP Health Monitor Configuration
# =============================================================================

# Health Server Settings
MCP_HEALTH_PORT=3021
MCP_HEALTH_CONFIG="../MCP/health-config.env"
MCP_HEALTH_LOG="../MCP/logs/health-server.log"
MCP_HEALTH_DEBUG=false

# MCP Manager Settings
MCP_LOG_FORMAT=text
MCP_LOG_LEVEL=INFO

# SSE Connection Settings
SSE_HOST=127.0.0.1
SSE_PORT=3020
MCP_PID_FILE="../MCP/cipher-aggregator.pid"

# Startup and Health Check Timing
STARTUP_GRACE_PERIOD=5
SSE_CHECK_TIMEOUT=3
SSE_CHECK_RETRIES=5

# Health Check Thresholds
HEALTH_SCORE_THRESHOLD_WARNING=75
HEALTH_SCORE_THRESHOLD_CRITICAL=50

# Monitoring Settings
MONITOR_CHECK_INTERVAL=30
LOG_MAX_SIZE_MB=100

# Service Management
AUTO_START_HEALTH_SERVER=true
HEALTH_SERVER_AUTO_RESTART=true
